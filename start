#!/usr/bin/env bash

set -euo pipefail

if [ $# -eq 0 ]; then
  echo "Usage: start orch|web"
  exit 1
fi

case "$1" in
  orch|orchestrator)
    shift
    python -m app.main "$@"
    ;;
  web|ui)
    shift
    python -m app.web_api "$@"
    ;;
  *)
    echo "Unknown shortcut '$1'. Available: orch, web"
    exit 1
    ;;
esac
